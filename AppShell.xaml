<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Görsel_Programlama_Ödev_1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Görsel_Programlama_Ödev_1"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Anasayfa"
        ContentTemplate="{DataTemplate local:MainPage}"
        Icon="home.png"
        Route="MainPage" />

    <ShellContent
        Title="Kredi Hesaplama"
        ContentTemplate="{DataTemplate local:Kredi}"
        Icon="calculator.png"
        Route="Kredi" />

    <ShellContent
        Title="Vücut Kitle İndeksi"
        ContentTemplate="{DataTemplate local:VKindeks}"
        Icon="index.png"
        Route="VKindeks" />

    <ShellContent
        Title="Renk Seçici"
        ContentTemplate="{DataTemplate local:Renk}"
        Icon="colorpalette.png"
        Route="Renk" />

    <ShellContent
        Title="Yapılacaklar"
        ContentTemplate="{DataTemplate local:ToDo}"
        Icon="checklist.png"
        Route="ToDo" />

</Shell>
